{
    "name": "cakephp/app",
    "description": "CakePHP skeleton app",
    "homepage": "http://cakephp.org",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-soap": "*",
        "ext-intl": "*",
        "ext-bcmath": "*",
        "cakephp/cakephp": "3.7.*",
        "mobiledetect/mobiledetectlib": "2.*",
        "cakephp/migrations": "@stable",
        "cakephp/plugin-installer": "1.3.*",
        "josegonzalez/cakephp-upload": "^3.6",
        "imagine/imagine": "^0.6.3",
        "burzum/cakephp-imagine-plugin": "2.*",
        "mikehaertl/phpwkhtmltopdf": "^2.3",
        "ncjoes/poppler-php": "1.0",
        "monolog/monolog": "^2.0",
        "pgbi/cakephp3-soft-delete": "~1.0",
        "moneyphp/money": "^3.3",
        "brick/math": "^0.8.15",
        "aws/aws-sdk-php": "^3.209",
        "friendsofcake/cakephp-csvview": "3.*"
    },
    "require-dev": {
        "psy/psysh": "@stable",
        "cakephp/debug_kit": "~3.2",
        "josegonzalez/dotenv": "^3.2",
        "cakephp/bake": "~1.1",
        "phpunit/phpunit": "^5.7|^6.0",
        "symfony/dom-crawler": "^4.2",
        "symfony/css-selector": "^4.2",
        "codeception/specify": "1.0",
        "codeception/verify": "^1.0",
        "codeception/assert-throws": "^1.0",
        "mockery/mockery": "^1.3",
        "fzaninotto/faker": "^1.9"
    },
    "suggest": {
        "markstory/asset_compress": "An asset compression plugin which provides file concatenation and a flexible filter system for preprocessing and minification.",
        "phpunit/phpunit": "Allows automated tests to be run without system-wide install.",
        "cakephp/cakephp-codesniffer": "Allows to check the code against the coding standards used in CakePHP."
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "App\\Console\\Installer::postInstall"
        ],
        "post-create-project-cmd": "App\\Console\\Installer::postInstall",
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests",
        "cs-fix": "phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests",
        "test_all": "phpunit --colors=always --debug -c phpunit.xml.dist",
        "test": "phpunit --colors=always --debug"
    },
    "prefer-stable": true,
    "config": {
        "process-timeout": 3600,
        "allow-plugins": {
            "cakephp/plugin-installer": true
        }
    }
}
